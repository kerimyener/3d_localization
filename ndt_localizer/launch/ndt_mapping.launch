<launch>
<param name="use_sim_time" value="true" />
<rosparam>
  tf_x: -0.175
  tf_y: 0.0
  tf_z: 2.0
  tf_roll: 0
  tf_pitch: 0
  tf_yaw: 0.7
</rosparam>
  <arg name="use_gpu" default="false" />
  <arg name="use_fast_pcl" default="false" />
  <arg name="use_openmp" default="false" />
  <arg name="use_imu" default="false" />
  <arg name="use_odom" default="false" />
  <arg name="imu_upside_down" default="false" />
  <arg name="imu_topic" default="/imu_raw" />
  <arg name="velodyne_topic" default="/velodyne/velodyne_points" />


  <!-- rosrun ndt_localizer ndt_mapping  -->
  <node pkg="ndt_localizer" type="queue_counter" name="queue_counter" output="screen"/>
  <node pkg="ndt_localizer" type="ndt_mapping_node" name="ndt_mapping" output="screen" unless="$(arg use_openmp)">
    <param name="use_gpu" value="$(arg use_gpu)" />
    <param name="use_fast_pcl" value="$(arg use_fast_pcl)" />
    <param name="use_openmp" value="$(arg use_openmp)" />
    <param name="use_imu" value="$(arg use_imu)" />
    <param name="use_odom" value="$(arg use_odom)" />
    <param name="imu_upside_down" value="$(arg imu_upside_down)" />
    <!--param name="imu_topic" value="$(arg imu_topic)" /-->
    <param name="velodyne_topic" value="$(arg velodyne_topic)" />
 </node>

  <node
   pkg="rosbag" type="play" name="player"  args="--clock /media/kyyurtdas/104632FA4632E060/rosbag_logs/drive_around2_2018-03-21-12-21-37.bag">
  </node>
</launch>
